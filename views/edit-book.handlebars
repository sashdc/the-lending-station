<form class="w-75 m-auto edit-book-form" id="edit-book-form">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="title">Book ID</label>
      <input type="title" class="form-control" id="book-id" value="{{book.id}}">
    </div>
     <div class="form-group col-md-4">
    <label for="exampleFormControlSelect1">Available</label>
    <select name = "availability" class="form-control" id="availability">
      <option value="true">Yes</option>
      <option value="false">No</option>
      </select>
  </div>
  <div class="form-group col-md-2">
      <label for="title">Borrower ID</label>
      <input type="title" class="form-control" id="borrower-id" value="{{book.id}}">
    </div>
    </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="title">Book Name</label>
      <input type="title" class="form-control" id="title" value="{{book.title}}">
    </div>
    <div class="form-group col-md-6">
      <label for="author">Author</label>
      <input type="author" class="form-control" id="author" value="{{book.author}}">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-2">
      <label for="year">Year published</label>
      <input type="year" class="form-control" id="year" value="{{book.year}}">
    </div>
    <div class="form-group col-md-5">
      <label for="isbn">ISBN#</label>
      <input type="isbn" class="form-control" id="isbn" value="{{book.isbn}}">
    </div>
      <div class="form-group col-md-5">
    <label for="exampleFormControlFile1">Upload Book Cover</label>
    <input type="file" class="form-control-file" id="cover">
  </div>
  </div>
  
  <div class="form-group">
    <label for="synopsis">Synopsis</label>
    <textarea class="form-control" id="synopsis" rows="6">{{book.synopsis}}</textarea>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

  <script src="/js/edit-book.js"></script>
