<form class="w-75 m-auto">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="title">Book Name</label>
      <input type="title" class="form-control" id="book-title" placeholder="book name">
    </div>
    <div class="form-group col-md-6">
      <label for="author">Author</label>
      <input type="author" class="form-control" id="book-author" placeholder="author">
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="year">Year published</label>
      <input type="year" class="form-control" id="book-year" placeholder="year">
    </div>
    <div class="form-group col-md-6">
      <label for="isbn">ISBN#</label>
      <input type="isbn" class="form-control" id="book-isbn" placeholder="ISBN#">
    </div>
      <div class="form-group">
    <label for="exampleFormControlFile1">Upload Book Cover</label>
    <input type="file" class="form-control-file" id="coverupload">
  </div>
  </div>
  
  <div class="form-group">
    <label for="synopsis">Synopsis</label>
    <textarea class="form-control" id="synopsis" placeholder="a brief description" rows="6"></textarea>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>