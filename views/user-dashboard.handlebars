<div class=""><h1>Welcome back {{user.first_name}} {{user.last_name}} ({{user.username}})</h1></div>


<div class="d-flex flex-column mt-5 ">
  <div class="d-flex flex-row justify-content-between border-dark">
        {{#if user.books}}
    <div class="card m-auto" style="width: 18rem; ">
          <h4 class="text-center mt-1">Currently with you</h4>
      <a href = "/book/{{borrowedbook.id}}"><img class="card-img-top" src="/images/covers/{{borrowedbook.id}}.jpg" alt="Card image cap"></a>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{borrowedbook.title}}  </li>
        <li class="list-group-item">Due Date: {{borrowedbook.available_next}}</li>
      </ul>
    </div>
    
  {{else}}

        
      <!-- DEMO 2 Item-->
      <div class="col-lg-6 mb-3 mb-lg-0 m-auto">
      <a href="/library"><div class="hover hover-2 text-white rounded"><img src="/images/timtom-web - copy.jpg" alt="">
          <div class="hover-overlay"></div>
          <div class="hover-2-content px-5 py-4">
            <h3 class="hover-2-title text-uppercase font-weight-bold mb-0"> <span class="font-weight-light">The </span>Library</h3>
            <p class="hover-2-description text-uppercase mb-0">Click here to see what we have available and get reading.</p>
          </div>
        </div></a>
      </div>

{{/if}}
  </div>
<!-- previously borrowed books -->
        {{#if user.books}}

<div class="container">
  <h1 class="fw-light text-center text-lg-start mt-5 mb-0">Previously borrowed books</h1>

  <hr class="mt-2 mb-5">

  <div class="row text-center text-lg-start">

    
     {{#each user.books as |book|}}
        {{> book-tile book }}
    {{/each}}
   
  </div>

</div>
{{/if}}
</div>

  <script src="/js/userdashboard.js"></script>

